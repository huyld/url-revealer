{

  "manifest_version": 2,
  "name": "URL Revealer",
  "version": "2.0",
  "author": "HuyLD",

  "description": "Reveal the true destination of shortened URLs.",

  "icons": {
    "48": "assets/main-icon.svg",
    "96": "assets/main-icon.svg"
  },

  "permissions": [
    "activeTab",
    "notifications",
    "storage"
  ],

  "browser_action": {
    "default_icon": "assets/main-icon.svg",
    "default_popup": "popup/popup.html",
    "default_title": "URL Revealer"
  },

  "background": {
    "scripts": [
      "background.js"
    ]
  },

  "content_scripts": [
    {
      "matches": [ "<all_urls>" ],
      "js": [ "/content_scripts/main-content-script.js" ]
    }
  ]
}
