{
    "manifest_version": 2,
    "name": "URL Revealer",
    "version": "2.0",
    "author": "HuyLD",

    "description": "Reveal the true destination of shortened URLs.",

    "icons": {
        "16": "assets/main-icon@16px.png",
        "48": "assets/main-icon@48px.png",
        "96": "assets/main-icon@96px.png",
        "128": "assets/main-icon@128px.png"
    },

    "permissions": [
        "<all_urls>",
        "activeTab",
        "notifications",
        "storage"
    ],

    "browser_action": {
        "default_icon": "assets/main-icon@128px.png",
        "default_popup": "popup/popup.html",
        "default_title": "URL Revealer"
    },

    "background": {
        "scripts": [
            "background-scripts/supported-domains.js",
            "background-scripts/url-parser.js",
            "background-scripts/cache-service.js",
            "background-scripts/request-url.js",
            "background-scripts/main-background.js"
        ]
    },

    "content_scripts": [
        {
            "matches": [ "<all_urls>" ],
            "js": [
                "/services/tooltip-service.js",
                "/content_scripts/main-content-script.js"
            ],
            "css": [
                "assets/tooltip.css"
            ]
        }
    ]
}
